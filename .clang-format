# This file was generated by this command: clang-format -style=llvm -dump-config > .clang-format
# This file uses the llvm
# Options: https://clang.llvm.org/docs/ClangFormatStyleOptions.html
---
BreakBeforeBraces: Custom # Where to place the opening brace (e.g: Attach, Linux, Stroustrup, Allman, GNU, WebKit, Mozilla, None)
BraceWrapping:
  AfterControlStatement: false # false=(removes \n before the brace of control statements like if, else)
  BeforeElse: true # true=(inserts \n before the 'else')


AllowShortBlocksOnASingleLine: Never # Don't collapse empty blocks to single line
AllowShortIfStatementsOnASingleLine: Never # Never collapse if statements to single line
Language: Cpp
IndentWidth: 2
ColumnLimit: 0 # no line limit
PointerAlignment: Left #   int* x  vs  int *x
IncludeBlocks: Merge # Place includes together
